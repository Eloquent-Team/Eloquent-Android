<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/recorder_dest">

    <fragment
        android:id="@+id/recorder_dest"
        android:name="berlin.eloquent.eloquentandroid.recorder.RecorderFragment"
        android:label="RecorderFragment"
        tools:layout="@layout/recorder_fragment" >
        <action
            android:id="@+id/next_action"
            app:destination="@id/player_dest" />
    </fragment>
    <fragment
        android:id="@+id/home_dest"
        android:name="berlin.eloquent.eloquentandroid.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment" />
    <fragment
        android:id="@+id/account_dest"
        android:name="berlin.eloquent.eloquentandroid.account.AccountFragment"
        android:label="AccountFragment"
        tools:layout="@layout/account_fragment" />
    <fragment
        android:id="@+id/player_dest"
        android:name="berlin.eloquent.eloquentandroid.player.PlayerFragment"
        android:label="PlayerFragment"
        tools:layout="@layout/player_fragment">
        <argument
            android:name="recording"
            app:argType="berlin.eloquent.eloquentandroid.models.Recording" />
        <action
            android:id="@+id/action_playerFragment_to_feedbackFragment"
            app:destination="@id/feedback_dest" />
    </fragment>
    <fragment
        android:id="@+id/feedback_dest"
        android:name="berlin.eloquent.eloquentandroid.feedback.FeedbackFragment"
        android:label="FeedbackFragment"
        tools:layout="@layout/feedback_fragment"/>

</navigation>